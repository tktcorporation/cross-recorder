{
  "name": "cross-recorder",
  "version": "0.4.0",
  "description": "Cross-platform desktop audio recorder built with Electrobun",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.30.3",
  "scripts": {
    "start": "vite build && electrobun dev",
    "dev": "electrobun dev --watch",
    "dev:hmr": "concurrently \"bun run hmr\" \"bun run start\"",
    "hmr": "vite --port 5173",
    "build": "vite build && electrobun build",
    "build:vite": "vite build",
    "typecheck": "bash -c 'tsc --noEmit --skipLibCheck 2>&1 | grep -v node_modules | grep error && exit 1 || exit 0'",
    "lint": "oxlint",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "oxlint --fix",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "effect": "^3.12.0",
    "electrobun": "^1.14.4",
    "nanoid": "^5.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "oxlint": "^0.15.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  }
}
